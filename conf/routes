# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# APIs in EmployeeController
GET     /employee              controllers.EmployeeController.listEmployees()
GET     /employee/:id          controllers.EmployeeController.retrieve(id:Int)
POST    /employee              controllers.EmployeeController.create(request:Request)
PUT     /employee              controllers.EmployeeController.update(request:Request)
DELETE  /employee/:id          controllers.EmployeeController.delete(id:Int)

GET     /patient                        controllers.DBController.listPatients()
GET     /patient/:id                    controllers.DBController.retrievePatient(id:String)
POST    /patient                        controllers.DBController.createPatient(request:Request)
PUT     /patient/:id                    controllers.DBController.updatePatient(id:String)
DELETE  /patient/:id                    controllers.DBController.deletePatient(id:String)
GET     /patient/:id/session            controllers.DBController.listSessions(id:String)
GET     /patient/:id/session/:idS       controllers.DBController.retrieveSession(id:String,idS:String)
POST    /patient/:id/session            controllers.DBController.createSession(id:String,request:Request)
DELETE   /patient/:id/session/:idS      controllers.DBController.deleteSession(id:String,idS:String)


# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
